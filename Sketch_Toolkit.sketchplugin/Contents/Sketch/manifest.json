{
    "name": "Sketch Toolkit",
    "identifier": "maxoxo.plugin",
    "version": "1.2",
    "description": "Only for Material Design Pattern",
    "authorEmail": "ximy1803@gmail.com",
    "author": "maxoxo",

    "commands": [{
            "script": "md-icon/application.js",
            "handler": "onRun",
            "name": "生成图标主题",
            "identifier": "iconGenerator"
        },
        {
            "script": "md-icon/setSharedStyle.js",
            "handler": "onRun",
            "name": "设置样式",
            "identifier": "iconSetStyle"
        },
        {
            "script": "md-icon/copyArtboard.js",
            "handler": "onRun",
            "name": "重命图层",
            "identifier": "iconRenameLayer"
        },
        {
            "name": "生成排版规模",
            "script": "md-type/application.js",
            "handler": "onRun",
            "identifier": "typeScaleGenerator"
        },
        {
            "name": "从 CSV 生成表格",
            "script": "md-table/application.js",
            "handler": "onRun",
            "shortcut": "control shift t",
            "identifier": "tableCSVGenerator"
        },
        {
            "name": "选中同名图层",
            "script": "select/sameName.js",
            "handler": "onRun",
            "shortcut": "control shift s",
            "identifier": "selectSameName"
        }
    ],
    "menu": {
        "title": "Sketch Toolkit",
        "items": [
            {
                "title": "MD 图标",
                "items": ["iconGenerator", "iconSetStyle", "iconRenameLayer"]
            },
            {
                "title": "MD 排版",
                "items": ["typeScaleGenerator"]
            },
            {
                "title": "MD 表格",
                "items": ["tableCSVGenerator"]
            },
            {
                "title": "选择器",
                "items": ["selectSameName"]
            }
        ]
    }
}